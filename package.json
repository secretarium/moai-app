{
    "name": "@secretarium/moai",
    "version": "0.0.1",
    "private": true,
    "description": "Privacy preserving QRCode based checking application",
    "repository": "https://github.com/secretarium/moai-app",
    "author": "Florian Guitton <florian@secretarium.com> (https://github.com/fguitton)",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/secretarium/moai-app/issues"
    },
    "homepage": "https://github.com/secretarium/moai-app#readme",
    "packman": "yarn@2.1.1",
    "scripts": {
        "lint": "yarn workspaces foreach run lint",
        "lint:fix": "yarn workspaces foreach run lint:fix",
        "start": "yarn workspaces foreach run start",
        "web": "yarn workspace @secretarium/moai-expo web",
        "test": "yarn workspaces foreach run test",
        "test:mutation": "yarn workspaces foreach run test:mutation",
        "preinstall": "node ./scripts/hintYarn.js",
        "postinstall": "cd ./packages/mobile && expo-yarn-workspaces postinstall",
        "release": "release-it"
    },
    "keywords": [
        "secretarium",
        "check-in"
    ],
    "workspaces": {
        "packages": [
            "packages/*"
        ]
    },
    "devDependencies": {
        "@commitlint/config-conventional": "11.0.0",
        "@release-it/conventional-changelog": "2.0.0",
        "@typescript-eslint/eslint-plugin": "4.1.1",
        "@typescript-eslint/parser": "4.1.1",
        "commitlint": "11.0.0",
        "eslint": "7.9.0",
        "eslint-config-react-app": "5.2.1",
        "eslint-config-recommended": "4.1.0",
        "eslint-plugin-flowtype": "5.2.0",
        "eslint-plugin-import": "2.22.0",
        "eslint-plugin-jest": "24.0.1",
        "eslint-plugin-jsx-a11y": "6.3.1",
        "eslint-plugin-react": "7.20.6",
        "eslint-plugin-react-hooks": "4.1.2",
        "expo-yarn-workspaces": "1.2.1",
        "husky": "4.3.0",
        "release-it": "14.0.3"
    },
    "resolutions": {
        "@types/react": "16.9.48"
    },
    "husky": {
        "hooks": {
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
        }
    },
    "release-it": {
        "git": {
            "commitMessage": "chore: Release ${version}",
            "tagName": "v${version}"
        },
        "npm": {
            "publish": true
        },
        "github": {
            "release": true
        },
        "plugins": {
            "@release-it/conventional-changelog": {
                "preset": "angular"
            }
        }
    },
    "publishConfig": {
        "access": "public"
    },
    "eslintConfig": {
        "extends": "./eslint.config.js"
    }
}
