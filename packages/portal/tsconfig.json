{
    "extends": "../../tsconfig.json",
    "compilerOptions": {
        "baseUrl": "./src",
        "outDir": "./dist",
        "target": "ES2015",
        "lib": [
            "es2020"
        ],
        "allowJs": true,
        "strict": false,
        "forceConsistentCasingInFileNames": true,
        "esModuleInterop": true,
        "module": "ESNext",
        "isolatedModules": true,
        "jsx": "react",
        "noFallthroughCasesInSwitch": true
    },
    "include": [
        "index.d.ts",
        "src/*.ts",
        "src/*.tsx"
    ],
    "exclude": [
        "node_modules"
    ]
}