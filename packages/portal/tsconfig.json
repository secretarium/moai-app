{
    "extends": "../../tsconfig.json",
    "compilerOptions": {
        "baseUrl": "./src",
        "outDir": "./dist",
        "target": "es5",
        "lib": [
            "ES2015"
        ],
        "allowJs": true,
        "strict": false,
        "forceConsistentCasingInFileNames": true,
        "esModuleInterop": true,
        "module": "esnext",
        "isolatedModules": true,
        "jsx": "preserve"
    },
    "include": [
        "index.d.ts",
        "src/*.ts",
        "src/*.tsx"
    ],
    "exclude": [
        "node_modules"
    ]
}